    <%= image_tag @item.image || "https://media.istockphoto.com/photos/rubber-duck-picture-id476147637?k=6&m=476147637&s=612x612&w=0&h=AkhVVp-iQHgQmC9ullv78kYYRDHvPi6QOv8jZFwCRKo=",
    style: 'height: 200px;width: 200px;' %>
<h2>Name: <%= @item.name %></h2>
<h2>Description: <%= @item.description %></h2>
<h2>Price: $<%= @item.asking_price %>0</h2>
<h2>Auction Closes: <%= @item.end_date %></h2><br>
<h3>
    <% if @item.seller_id == current_user.id  %>
        <%= link_to "Edit your item for sale.", edit_item_path(@item) %>
        <%= link_to "Delete your item for sale.", item_path(@item), method: 'delete' %>
    <% elsif @item.end_date < Time.now %>
        <img src="https://1.bp.blogspot.com/_9g2caaQ2kgA/TGRjL0ND6sI/AAAAAAAACis/W1K8eilisIo/s320/duck.jpg" style="width:200px;height:200px;"><br><br><span class="alert alert-danger">This item is no longer for sale so you can duck off.</span>
    <% else %>
        <%= link_to "Place Bid", new_bid_path(item_id: @item.id) %>
    <% end %> 
</h3>

<% if @item.tags.any? %>
    <h2>Tags</h2>
    <% @item.tags.each do |tag| %>
        <%=link_to tag.name, items_path(tag_sort: tag.name)%>
    <% end %>
<% end %>
