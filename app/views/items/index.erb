<h1>Items</h1>
<%= form_tag items_path, method: "GET" do %>
    <%= label_tag :list, "All"%>
    <%= radio_button_tag :list, "all"%>
    <%= label_tag :list, "For Sale"%>
    <%= radio_button_tag :list, "sale"%>
    <%= label_tag :list, "My Items For Sale"%>
    <%= radio_button_tag :list, "selling"%>
    <%= submit_tag "Display Items"%>
<% end %><br>
<div class="container-fluid">
<div class="row flex-row flex-no-wrap row-horizon">
<% @items.each do |item| %>
    <div class="col mb-4">
            <div class="card-deck card" style="width: 18rem;">
                <a href=<%=item_path(item.id)%>><img src=<%=item.image%> class="card-img-top" alt="..."></a>
                <div class="card-body">
                    <p class="card-text"><%=item.description%></p>
                </div>
            </div>
            </div>
    <% end %>
</div>
</div>