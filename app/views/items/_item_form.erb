
<%= form_for @item do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.hidden_field :seller_id, value: current_user.id %>
    <%= f.label :description %><br>
    <%= f.text_field :description %><br>
    <%= f.label :image, "Image URL" %><br>
    <%= f.text_field :image %><br>
    <%= f.label :asking_price %><br>
    <%= f.number_field :asking_price %><br>
    <%= f.label "Deadline for item's sale"%><br>
    <%= f.date_field :end_date %><br><br>
    <%= f.submit "Add Item", :class => "btn btn-primary"%>
<% end %> 